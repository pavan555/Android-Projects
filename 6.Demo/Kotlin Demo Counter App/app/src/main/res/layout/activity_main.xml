<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/plusButton"
            android:text="@string/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="@color/colorAccent"
            android:onClick="increase"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/minusButton"
            android:text="@string/decrease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:background="@color/colorRed"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="decrease"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@+id/plusButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/minusButton" android:fontFamily="sans-serif-smallcaps"
            android:textSize="46sp" android:gravity="center" android:background="@android:color/holo_green_light"/>
</android.support.constraint.ConstraintLayout>